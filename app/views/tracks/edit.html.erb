<h1>Edit existing Track</h1>

<div class="next">
  <%= link_to 'Home', root_path %>
  <%= link_to 'Tracks', tracks_path %>
</div>

<% if @track.errors.any? %>
  <h2>The following errors occured</h2>
  <ul>
    <% @track.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @track do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<style scoped>
  .next{
    margin-right: 100px;
    float: right;
  }
</style>