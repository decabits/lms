<h1 align ="center">Track Itemss</h1>

<div class="row justify-content-center my-4">
	<% if can? :create, Track %>
	<%= link_to 'Add a new Topic', new_track_item_path, class: "btn btn-outline-info " %>
	<% end %>
</div>
<div class="row" >
	<% @items.each do |item| %>

	<div class="container  jumbotron mb-3">
		<%= link_to item.topic, track_item_path(item), class: "font-italic h5" %></br></br>
		<%= link_to 'Edit', edit_track_item_path(item), class: "btn btn-sm btn-outline-primary" if can? :update, Track %>
		<%= link_to 'Delete', track_item_path(item), method: :delete, class: "btn btn-sm btn-outline-danger", data: {confirm: "Are you sure?"} if can? :destroy, Track %>
	</div>
	<% end %>
</div>
