<div class='mt-5 row justify-content-center'>
  <div class='col-lg-6'>
<%= form_for @item  do |f| %>
  <div class="form-group">
<div class="control-label col-m-4">
    <%= f.label :topic %><br/>
    </div>
    <div class="col-m-4">
    <%= f.text_area :topic, rows: 2, class: "form-control", placeholder: "enter topic " %>
  </div>
  </div>
  <div class="form-group">
<div class="control-label col-m-4">
    <%= f.label :item_type %><br/>
    </div>
    <div class="col-m-4">
    <%= f.text_field :item_type, class: "form-control" %>
  </div>
  </div>
  <div class="form-group">
<div class="control-label col-m-4">
    <%= f.label :track_id %><br/>
    </div>
    <div class="col-m-4">
    <%= f.text_field :track_id, class: "form-control" %>
  </div>
  </div>
  <div class="row justify-content-center">

    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
<div class="row justify-content-center">

[ <%= link_to "Cancel request and return to tracks listing", tracks_path %> ]

</div>
</div>
</div>